<style>
    @page {
        size: A4 portrait;
        margin: 0.2cm;
    }

    * {
        font-family: "Source Sans Pro";
    }

    img {
        image-rendering: pixelated;
    }

    h1 {
        font-weight: 700;
        font-style: normal;
        font-size: 18px;
        font-family: "Source Sans Pro";
    }

    p {
        margin: 3px;
        font-size: 12px;
        font-family: "Source Sans Pro";
    }

    .title {
        display: inline-block;
        position: absolute;
        top: 15px;
        left: 100px;
    }

    .navlogo {
        display: inline-block;
        padding-top: 15px;
        padding-bottom: 12px;
        margin-left: 3px;
        width: 48px;
    }

    .header {
        background: #C2EAF7;
        padding: 0cm 0.7cm;
    }

    .container {
        margin: 0cm 0.7cm;
        height: 850px;
    }

    .personinfo {
        position: relative;
        top: 25px;
    }

    .navn {
        font-weight: bold;
        font-size: 14px;
        width: 350px;
    }

    .id {
        width: 430px;
    }

    .personikon {
        display: inline-block;
        width: 28px;
        margin-right: 4px;
        margin-left: 3px;
    }

    .persontekst {
        display: inline-block;
    }

    .sendt {
        position: absolute;
        right: 2cm;
        font-size: 10px;
        width: 250px;
    }

    .sporsmalcontainer {
        position: relative;
        top: 50px;
    }

    .svarcontainer {
        position: relative;
        left: 2px;
    }

    .svar {
        margin-top: 4px;
        width: 650px;
        font-size: 12px;
        font-family: "Source Sans Pro";
    }

    .svar--perioder {
        font-size: 16px;
        font-weight: bold;
        margin-left: 3px;

    }

    .svar--checkbox {
        display: inline-block;
    }

    .checkbox {
        vertical-align: top;
        width: 13px;
        margin: -1px 5px 0px 1px;
    }

    .sporsmal {
        padding-bottom: 0.5cm;
    }

    .hovedsporsmal {
        page-break-inside: avoid;
    }

    .sporsmalstekst {
        font-weight: bold;
    }

    .footer {
        display: block;
        position: absolute;
        top: 24.5cm;
        left: 0.9cm;
        font-size: 10px;
        width: 680px;
    }

    .sporsmal ul {
        font-family: "Source Sans Pro";
        font-size: 12px;
    }

    .sporsmal ul li {
        margin-bottom: 12px;
    }

</style>
