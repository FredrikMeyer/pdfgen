<style>
    @page {
        size: A4 portrait;
        margin: 0.2cm;
        padding-top: 1cm;

        @bottom-left {
            content: element(footer);
        }
    }

    @page:first {
        padding-top: 0;
        @top-left {
            content: element(header);
        }
    }

    * {
        font-family: "Source Sans Pro";
    }

    img {
        image-rendering: pixelated;
    }

    h1 {
        font-weight: 700;
        font-style: normal;
        font-size: 20px;
        font-family: "Source Sans Pro";
    }

    p {
        margin: 3px;
        font-size: 14px;
        font-family: "Source Sans Pro";
    }

    #footer {
        position: running(footer);
        font-size: 12px;
        margin: -20px 0.7cm 0;
    }

    .sidetall {
        float: right;
    }

    #pagenumber:before {
        content: counter(page);
    }

    #pagecount:before {
        content: counter(pages)
    }

    #header {
        background: #C2EAF7;
        padding: 0cm 0.7cm;
    }

    .title {
        display: inline-block;
        position: absolute;
        top: 12px;
        left: 100px;
    }

    .navlogo {
        display: inline-block;
        padding-top: 15px;
        padding-bottom: 12px;
        margin-left: 3px;
        width: 48px;
    }



    .container {
        margin: 0cm 0.7cm;
        height: 850px;
    }

    .personinfo {
        position: relative;
        top: 25px;
    }

    .navn {
        font-weight: bold;
        font-size: 16px;
        width: 350px;
    }

    .id {
        width: 430px;
    }

    .personikon {
        display: inline-block;
        width: 28px;
        margin-right: 4px;
        margin-left: 3px;
    }

    .persontekst {
        display: inline-block;
        width: 667px;
    }

    .sendt {
        float: right;
        width: 145px;
        font-size: 14px;
    }

    .sporsmalcontainer {
        position: relative;
        top: 50px;
    }

    .svarcontainer {
        position: relative;
        left: 2px;
    }

    .svar {
        margin-top: 4px;
        width: 650px;
        font-size: 14px;
        font-family: "Source Sans Pro";
    }

    .svar--perioder {
        font-size: 18px;
        font-weight: bold;
        margin-left: 3px;

    }

    .svar--checkbox {
        display: inline-block;
    }

    .checkbox {
        vertical-align: top;
        width: 13px;
        margin: -3px 5px 0px 1px;
    }

    .sporsmal {
        padding-bottom: 0.5cm;
    }

    .hovedsporsmal {
        page-break-inside: avoid;
    }

    .sporsmalstekst {
        font-weight: bold;
    }

    .sporsmal ul {
        font-family: "Source Sans Pro";
        font-size: 14px;
    }

    .sporsmal ul li {
        margin-bottom: 12px;
    }

</style>
