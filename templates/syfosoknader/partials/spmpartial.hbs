<div class="sporsmal">

    {{#eq svartype "CHECKBOX"}}
        {{#each svar as |s index|~}}
            {{#eq verdi "CHECKED"}}
                <div class="svarcontainer">
                    <img class="checkbox" src="{{ image "Checkboks.png" }}"/>
                    <span class="svar svar--checkbox">
                        {{ capitalize sporsmalstekst }}
                    </span>

                </div>
            {{/eq}}
        {{/each}}
    {{/eq}}

    {{#not_eq svartype "CHECKBOX"}}
        <p class="sporsmalstekst">
            {{ sporsmalstekst }}
        </p>

            {{#eq svartype "DATO"}}
                {{# each svar }}
                    <p class="svar svar--dato">
                        {{ iso_to_date verdi }}
                    </p>
                {{/each}}
            {{/eq}}

            {{#eq svartype "PERIODER"}}
                {{# each svar }}
                    {{# eq svarverdiType "FOM" }}
                    <p class="svar svar--dato">
                        {{#with (lookup svar @index)}}
                            {{ iso_to_date verdi }}
                        {{/with}}
                        â€“
                        {{#with (lookup svar (inc @index))}}
                            {{ iso_to_date verdi }}
                        {{/with}}
                    </p>
                    {{/eq}}
                {{/each}}
            {{/eq}}

            {{#eq svartype "FRITEKST"}}
                <p class="svar">
                    {{ svar.0.verdi }}
                </p>
            {{/eq}}

            {{#eq svartype "JA_NEI"}}
                <div class="svarcontainer">
                    <img class="checkbox" src="{{ image "Checkboks.png" }}"/>
                    <span class="svar svar--checkbox">
                        {{ capitalize svar.0.verdi }}
                    </span>
                </div>
            {{/eq}}

            {{#eq svartype "TIMER"}}
                <p class="svar">
                    {{ formatComma svar.0.verdi }} timer
                </p>
            {{/eq}}

            {{#eq svartype "PROSENT"}}
                <p class="svar">
                    {{ svar.0.verdi }} %
                </p>
            {{/eq}}

            {{#eq svartype "IKKE_RELEVANT"}}
                {{#if undertekst}}
                    {{safe undertekst}}
                {{/if}}
                <div class="svarcontainer">
                    <img class="checkbox" src="{{ image "Checkboks.png" }}"/>
                    <span class="svar svar--checkbox">
                        {{ capitalize undersporsmal.0.sporsmalstekst }}
                    </span>
                </div>
            {{/eq}}
    {{/not_eq}}


</div>
{{# eq svar.0.verdi kriterieForVisningAvUndersporsmal }}
    {{# if svar }}
        {{# each undersporsmal as |underspm index| ~}}
            {{> syfosoknader/partials/spmpartial underspm }}
        {{/each}}
    {{/if}}
{{/eq}}
